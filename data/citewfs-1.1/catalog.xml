<?config.xml version="1.0" encoding="UTF-8"?>
<catalog>
<datastores>
<!--
a datastore configuration element serves as a common data source connection
parameters repository for all featuretypes it holds.
-->
<datastore namespace = "sf" enabled = "true" id = "sf" >
<connectionParams>
<parameter value = "http://cite.opengeospatial.org/gmlsf" name = "namespace"  />
<parameter value = "false" name = "loose bbox"  />
<parameter value = "cite" name = "user"  />
<parameter value = "cite" name = "passwd"  />
<parameter value = "true" name = "wkb enabled"  />
<parameter value = "localhost" name = "host"  />
<parameter value = "5432" name = "port"  />
<parameter value = "cite" name = "database"  />
<parameter value = "postgis" name = "dbtype"  />
</connectionParams>
</datastore>

<!-- uncomment this , and comment out the above to use h2 instead of postgis -->
